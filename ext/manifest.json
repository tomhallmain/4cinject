{
  "name": "4CIJ",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "",
  "homepage_url": "https://4chan.org",
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "content_scripts": [{
    "matches": [
      "https://boards.4chan.org/*",
      "https://boards.4channel.org/*"
    ],
    "js": [ "loader.js" ],
    "persistent": true
  }],
  "action": {
    "default_icon": "icon.png",
    "default_title": "4CIJ",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "base.js",
      "extensionID.js",
      "helpers.js",
      "agent.js",
      "reporter.js",
      "popup/popup.js",
      "md5s.json",
      "filteredMD5s.json"
    ],
    "matches": [
      "https://boards.4chan.org/*",
      "https://boards.4channel.org/*"
    ]
  }],
  "externally_connectable": {
    "matches": [
      "https://boards.4chan.org/*",
      "https://boards.4channel.org/*"
    ]
  }
}
